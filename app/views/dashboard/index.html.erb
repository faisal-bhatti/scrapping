<div class="well signup-form">
	<h3 style="text-align: center;">Patient Search</h3>
	<%= form_for User.new,:url=>search_data_users_path,:html => { :class => 'form-horizontal' } do |f| %>
	  <div class="form-group">
	   	<%= f.label :first_name, :class => 'control-label' %>
		 	<%= f.text_field :first_name, :class =>'form-control' %>
	  </div>
	  <div class="form-group">
	  	<%= f.label :last_name, :class => 'control-label' %>
	 		<%= f.text_field :last_name, :class =>'form-control' %>
	  </div>

	  <div class="form-group">
	  	<%= f.label :patient_id, :class => 'control-label' %>
	 		<%= f.text_field :patient_id, :class =>'form-control' %>
	  </div>

	  <div class="form-group">
	  	<%= f.label :dob, :class => 'control-label' %>
	 		<%= f.text_field :dob, :class =>'form-control datepicker' %>
	  </div>
	  
	  <%= submit_tag "", :value => "â–º save", :class => "pull-right btn btn-sm btn-primary" %>
	<% end %>
</div>

<style type="text/css">
	.signup-form {
		width: 50%;
		margin: 120px auto 0;
		padding: 20px 50px 20px;
		overflow: hidden;
	}

</style>